<% if (students.length > 0) { %>
  <table border="1" cellpadding="5" cellspacing="0">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Student ID</th>
      <th>Mobile No.</th>
      <th>Joined At</th>
    </tr>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.student_id %></td>
        <td><%= student.mobile_no %></td>
        <td><%= new Date(student.created_at).toLocaleDateString() %></td>
      </tr>
    <% }) %>
  </table>
<% } else { %>

  <div class="container">
    <!-- Search Bar -->
    <div class="search-bar">
      <form method="GET" action="/student/books">
        <input type="text" name="search" placeholder="Search books by title, author..." required>
        <button type="submit">ğŸ” Search</button>
      </form>
    </div>

    <% if (books.length > 0) { %>
      <table class="books-table">
        <thead>
          <tr>
            <th>ğŸ“˜ Title</th>
            <th>âœï¸ Author</th>
            <th>ğŸ·ï¸ Genre</th>
            <th>ğŸ“¦ Available Copies</th>
            <th>âš¡ Action</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(book => { %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.genre %></td>
              <td><%= book.available_copies %></td>
              
              <td>
                <%if(borrowed >=3){%>
                  <span class="unavailable">Limit Reached</span>
                <% } else { %>
                <% if (book.available_copies > 0 ) { %>
                  <form method="POST" action="/student/borrow">
                    <input type="hidden" name="book_id" value="<%= book.id %>">
                    <button type="submit" class="btn-borrow">Borrow</button>
                  </form>
                <% } else { %>
                  <span class="unavailable">Unavailable</span>
                <% } %>
                 <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-books">No books in the library yet.</p>
    <% } %>
  </div>

<footer>
  <p>&copy; <%= new Date().getFullYear() %> Online Library Management System</p>
